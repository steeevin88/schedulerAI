generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  email    String   @unique
  name     String
  password String
  preferences String
  friends Friend[] @relation("UserFriends")
}

model Friend {
  email    String   @unique
  user User @relation("UserFriends", fields:[email], references: [email])
}

model Event {
  email    String   @unique
  event_name String
  start_time DateTime
  end_time   DateTime
}
