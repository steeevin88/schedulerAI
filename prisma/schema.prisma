generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  email       String   @unique
  name        String
  password    String
  preferences String
  friends     Friend[] @relation("UserFriends")
}

model Friend {
  email       String   @unique
  user        User     @relation("UserFriends", fields:[email], references: [email])
}

model Event {
  id          Int      @id @default(sequence())
  email       String   
  event_name  String
  start_time  DateTime
  end_time    DateTime
}
